<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.greenhome_v2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Goals"
            android:label="@string/title_activity_goals"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity_analysis"
            android:label="@string/title_activity_analysis"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity_shopping_list"
            android:label="@string/title_activity_shopping_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity_input"
            android:label="@string/title_activity_input"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity_settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity_connect_to_device"></activity>
    </application>

</manifest>